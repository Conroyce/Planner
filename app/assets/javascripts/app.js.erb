var app = angular.module("Planner",["ngRoute", "ngResource"])
  .config(["$routeProvider", function($routeProvider) {
    $routeProvider
      .when("/todos", {
        templateUrl: "<%= asset_path('templates/todo.html') %>",
        controller: "TodoCtrl"
      })
      .when("/todos/:id/edit", {
        templateUrl: "<%= asset_path('templates/todo_edit.html') %>",
        controller: "TodoCtrl"
      })
      .when("/complete", {
        templateUrl: "<%= asset_path('templates/complete.html') %>",
        controller: "TodoCtrl"
      })
      .otherwise({redirectTo: "/todos"});
  }]);